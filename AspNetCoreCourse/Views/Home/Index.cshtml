@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, @ViewContext.HttpContext.User.Identity.Name</h1>
    <p>Вы зашли в систему @User.FindFirst(x => x.Type == "authentification_datetime").Value</p>
    <p>Посмотреть <a href="/orders/index">список заказов</a>.</p>
    <form asp-action="Signout" asp-controller="Account" asp-anti-forgery="true">
        <div class="form-group">
            <input type="submit" value="Выйти" class="btn btn-outline-dark" />
        </div>
    </form>
</div>
